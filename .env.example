# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False  # Set to False in production

# File Size Limits (adjust based on server RAM)
# For Render Free Tier (512MB RAM): use 85MB max (prevents OOM)
# For Render Starter (512MB RAM): use 100MB max
# For local development: adjust as needed
RAM_SAFETY_MARGIN=0.7
ABSOLUTE_MAX_FILE_SIZE=89128960  # 85MB (safe for 512MB RAM servers)
MIN_FREE_RAM_REQUIRED=104857600   # 100MB

# Processing
MAX_PARALLEL_WORKERS=4  # Reduce to 2 for free tier
DEFAULT_CHUNK_SIZE=10

# Watermark Settings
WATERMARK_TEXT=WATERMARK
WATERMARK_FONT_SIZE=60
WATERMARK_OPACITY=0.3
WATERMARK_ROTATION=45

# Storage
TEMP_DIR=temp_files
JOB_RETENTION_HOURS=1
MAX_CONCURRENT_JOBS=10  # Reduce to 5 for free tier

# CORS (comma-separated frontend URLs)
# For development:
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# For production, add your domains:
# CORS_ORIGINS=https://yourusername.github.io,https://your-domain.com

# Size Recheck
RECHECK_SIZE_ON_UPLOAD=True
